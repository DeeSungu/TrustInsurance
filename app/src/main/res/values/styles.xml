<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/one</item>
        <item name="colorPrimaryDark">@color/two</item>
        <item name="android:popupMenuStyle">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="colorAccent">@color/three</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>


        <item name="android:background">@color/background</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="bottom" >
        <item name="android:textSize">22sp</item>
        <item name="itemIconTint">@color/three</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:strokeColor" tools:targetApi="lollipop">@color/three</item>
        <item name="android:textColor">@color/three</item>

    </style>

</resources>
